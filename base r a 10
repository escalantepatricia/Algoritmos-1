#include "stdafx.h"
#include "conio.h"
#include "iostream"
#include "math.h"
using namespace std;
 
int main()
{int n,dig,r,s,i,pot;
cout<<"N : ";
cin>>n;
cout<<"r : ";
cin>>r;
s=0;
pot=1;
while(n!=0)
{
      dig=n%10;
      s=s+dig*pot;
      pot=pot*r;
      n=n/10;
}
cout<<"respuesta : "<<s;
getch();
      return 0;
}
