int invertir(int n)
{
    int inv=0;
    while(n>0)
    {
        inv=inv*10;
        inv=inv+(n%10);
        n=n/10;
    }
    return inv;
}
void numero(int v[], int n)
{
    int a;
    for(int i=0;i<n;i++)
    {
        if(i<=3)
        {
            v[i]=powf(i,2);
            cout<<v[i]<<"__";
        }
        else
        {
            v[i]=powf(i,2);
            a=invertir(v[i]);
            cout<<a<<"___";
        }
    }
}

