// Primer progama.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include "iostream"

using namespace std;

int main ()
{int N,s,i,t;
cout<<"Introducir N ";
cin>>N;
s=0;
t=1;
i=1;
   while(i<=N)
{		s=s+t;
		t=t+2;
		i++;
}
cout<<"La suma es" << s;
getch();
	return 0;
}
