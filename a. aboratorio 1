#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

int invertir(int n)
{
    int inv=0;
    while(n>0)
    {
        inv=inv*10;
        inv=inv+(n%10);
        n=n/10;
    }
    return inv;
}
void generarnum(int v[], int n)
{
    int a;
    for(int i=0;i<n;i++)
    {
        if(i<=3)
        {
            v[i]=powf(i,2);
            cout<<v[i]<<"__";
        }
        else
        {
            v[i]=powf(i,2);
            a=invertir(v[i]);
            cout<<a<<"___";
        }
    }
}
void main()
{
    int v[100],a;
    do
    {
        cout<<"ingrese tamaño";
        cin>>a;
    }while(a<0);
      
      generarnum(v,a);
      getchar();
      system("pause");
}

•	INVERTIR, CONTAR, CONCATENAR, DIGITOS REPETIDOS, ELIMINAR DIGITOS, ELIMINAR REPETIDOS 
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;

int invertir(int n);
int contar(int num);
int concatenar(int a,int b);
int digRepetido(int Num);
int eliminarDig(int Num, int dig);
void eliminarRepetidos(int Num);

int main ()
{
    int n, op,a,b,A,num;
	do
    {
        cout<<endl<<"-----MENU-----";
        cout<<endl<<"1. Concatenar dos numeros ";
        cout<<endl<<"2. Eliminar repetidos ";
        cout<<endl<<"3. Invertir un numero ";
        cout<<endl<<"4. Salir ";
        cout<<endl<<"Elegir una opcion";
		cin>>op;

        switch (op){
            case 1:
                cout<<"Ingrese un numero: ";
                cin>>a;
                cout<<"Ingrese otro numero: ";
                cin>>b;
                num=concatenar(a,b);
                cout<<endl<<"el numero concatenado es: "<<num;
                break;

            case 2:
                cout<<endl<<"ingrese un numero:";
                cin>>num;
                eliminarRepetidos(num);
                break;

            case 3:
                cout<<endl<<"Ingrese el numero que desea invertir: ";
                cin>>n;
                A=invertir(n);
                cout<<endl<<"el numero invertido es"<<A;
                break;
            case 4:
                cout <<"salir";
                break;
            default:
                cout<<"Error";
                break;

        }
                
    
    }while (op!=4);

    getchar();
	system("pause");
    return 0;
}

int invertir(int n)
{
    int inv=0;
    while(n!=0)
    {
        inv=inv*10;
        inv=inv+(n%10);
        n=n/10;
    }
    return inv;
}


int digRepetido (int Num)
{
    int s, aux,d1,d2,c;
    aux=Num;
    while(Num>0)
    {
        d1= Num%10;
        c=0;
        s=aux;
        while (s>0)
        {
            d2=s%10;
            if(d2==d1)
            {
                c++;
            }
            s=s/10;
        }
        if(c>1)
        {
            return(d1);
        }
        Num=Num/10;
    }
    return(-1);
}

int eliminarDig (int Num, int dig)
{
    int x,s=0,m=1;
    while(Num>0)
    {
        x=Num%10;
        if(x!=dig)
        {
            s=s+(x*m);
            m=m*10;
        }
        Num=Num/10;
    }
    return(s);
}



void eliminarRepetidos(int Num)
{
    int  d;
    d=digRepetido(Num);
    while (d!=(-1))
    {
        Num= eliminarDig (Num, d);
        d= digRepetido (Num);
    }
    cout<<Num;
}
int contar(int num)
{
    int cont=0;
    do
    {
        num=num/10;
        cont++;
    }while(num>0);
    
	return (cont);
}

int concatenar (int a, int b)
{
    int num,n,contador=0;
    if(a>b)
    {
        contador= contar(a);
        num= powf(10,contador);
        n= (b*num)+a;
	}
    else
    {
		contador= contar(b);
        num= powf(10,contador);
        n= (a*num)+b;
	}
	return n;
}
•	MATRIZ
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <iomanip>
#include "stdlib.h"

#define FIL 30
#define COL 30

using namespace std;

void cargarMatriz(int mat[FIL][COL], int n, int m);
void mostrarMatriz(int mat[FIL][COL], int n, int m);
float promediodiagonalmatriz(int mat[FIL][COL], int n, int m);
void mostrartriangularinf (int mat[FIL][COL],int n , int m);
bool matCuad (int n, int m);

void main()
{
	int n, m, mat[FIL][COL],opc;
	bool band;
//Aqui validacion de la fila!!!!
	do{
		cout<<"Ingrese el numero de filas: ";
		cin>>n;
	}while((n<=0)||(n>FIL));
	do{
		cout<<"Ingrese el numero de columnas: ";
		cin>>m;
	}while((m<=0)||(m>COL));
//Empieza el menu.
do{
	cout<<endl<<"   MENU   "<<endl;
	cout<<"1.CargarMatriz"<<endl;
	cout<<"2.MostrarMatriz"<<endl;
	cout<<"3.Promedio de la diagonal Matriz"<<endl;
	cout<<"4.Mostrartriangularinf"<<endl;
	cout<<"5.Salir"<<endl;

	cout<<"Ingrese la opcion:";
	cin>>opc;
	switch(opc){
		case 1:
			cout<<"ingrese un elemento";
			cargarMatriz(mat, n, m);
			break;
		case 2:
			mostrarMatriz(mat,n,m);
			break;
		case 3:
			band= matCuad (n,m);
			if (band==false)
				cout<<endl<<"La matriz no es cuadrada, No se puede realizar la operacion";
			else
			{
				cout<<"el promedio es= "<<promediodiagonalmatriz(mat,n,m);
			}
			break;
		case 4:
			band= matCuad (n,m);
			if (band==false)
				cout<<endl<<"La matriz no es cuadrada, No se puede realizar la operacion";
			else
				mostrartriangularinf(mat,n,m);
			break;
		case 5:
			cout<<"Salir";
			break;
		
		default:
			cout<<"Error";
			break;

	}
	getchar();
	system ("cls");
}while(opc!=0);//Aqui termina el menu!!

}

void cargarMatriz(int mat[FIL][COL], int n, int m)
{
	int i,j;
	for(i=0;i<n;i++)
		for(j=0;j<m;j++)
			{
				cout<<"mat["<<i<<"]["<<j<<"]: ";
				cin>>mat[i][j];
			}
}

void mostrarMatriz(int mat[FIL][COL], int n, int m)
{
	int i,j;
	for(i=0;i<n;i++)
	{
		for(j=0;j<m;j++)
			{
				cout<<setw(4)<<mat[i][j];
			}
		cout<<endl;
	}
}

float promediodiagonalmatriz(int mat[FIL][COL], int n, int m)
{	int i,j,s=0;//inicializador.
	float p;//variable intermedia.
	for(i=0;i<n;i++)
			s = s + mat[i][i];//acumulador.
	p = s/n;
	return p;
}
void mostrartriangularinf (int mat[FIL][COL],int n , int m)
{
	int i,j;
	for(i=0;i<n;i++)
	{for(j=0;j<i;j++)
			
					
	    cout<<setw(4)<<mat[i][j];
				
				

			
		cout<<endl;
	}
}

bool matCuad(int n,int m)
{
	bool bandera=true;

	if (n!=m)
		bandera=false;

	return (bandera);
}
