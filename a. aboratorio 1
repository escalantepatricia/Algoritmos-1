#include "stdafx.h"
#include <iostream>
#include "conio.h"
 
using namespace std;
 
void secuencia (int n);
 
int main()
{
int n;
do
{
cout<<"Ingrese hasta el numero que quiere mostrar: ";
cin>>n;
}while(n<4);

secuencia(n) ;
getchar();
system("pause");
return 0;
}
 
void secuencia(int n)
{
int a=-1,b=1,c=0,res,i=0;
while(i<n)
       {
		res=a+b+c;
		a=b;
		b=c;
		c=res;
		cout<<res<<"\t";
		i++;
       }
 }
